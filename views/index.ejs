<html lang="en">

  <body>
    
    <%- include ('./partials/nav.ejs') %>

    <div class="Blogs content">
      <h2>All blogs</h2>

      <% if(blogs.length > 0){%>
        <% blogs.forEach(blog => { %>
       
          <h3 class="title"><%= blog.title %> </h3>
          <p class="snippet"><%= blog.snippet %> </p>
       
          <% }) %> 
      <% }else {  %>
        <p> Nothing to show...</p>
      <% } %>

    </div>
  </body>
</html>
